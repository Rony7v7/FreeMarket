---
const { type = "button", size = "medium", color = "zinc", disabled = false, children, href = "#" } = Astro.props;

const baseClass = "py-1.5 border rounded-md font-medium text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 transition disabled:opacity-50 disabled:cursor-not-allowed";
const colorClasses = {
  zinc: "bg-zinc-900 text-zinc-100 border-zinc-900 focus:ring-blue-500",
  blue: "bg-blue-500 text-white border-blue-500 focus:ring-blue-600",
  gray: "bg-gray-500 text-white border-gray-500 focus:ring-gray-600",
};
const sizeClasses = {
  small: "px-2 text-xs",
  medium: "px-4 text-sm",
  large: "px-6 text-lg",
};
const classes = `${baseClass} ${colorClasses[color] || colorClasses["zinc"]} ${sizeClasses[size] || sizeClasses["medium"]}`;
---

{disabled ? (
  <button class={classes} type={type} disabled={disabled}>
    {children}
  </button>
) : (
  <a href={href} class={classes} type={type}>
    {children}
  </a>
)}
