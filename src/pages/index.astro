---
import Layout from "../layouts/Layout.astro";
---

<Layout title="FreeMarket">
  <main class="min-h-screen bg-gray-100 flex flex-col items-center justify-center">
    <section class="text-center space-y-6 max-w-lg p-10 bg-white rounded-md shadow-md">
      <h1 class="text-4xl font-bold text-zinc-900">
        Welcome to <span class="text-yellow-500">FreeMarket</span>
      </h1>
      <p class="text-zinc-500 text-sm">
        Simplify your buying and selling experience. Join us and discover a world of opportunities!
      </p>
      <div class="flex gap-4 justify-center">
        <a
          href="/login"
          class="px-6 py-2 text-zinc-100 bg-zinc-900 rounded-md hover:bg-zinc-800 transition focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          Login
        </a>
        <a
          href="/register"
          class="px-6 py-2 text-zinc-900 border border-zinc-900 rounded-md hover:bg-zinc-900 hover:text-zinc-100 transition focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          Register
        </a>
      </div>
    </section>
  </main>
</Layout>
