

{
  "compilerOptions": {
    "target": "es6",                          // Establece la versión de ECMAScript que se generará
    "module": "CommonJS",                       // Cambiado a Node16
    "moduleResolution": "node",             // Actualiza la resolución de módulos
    "outDir": "./dist",                       // Directorio de salida para los archivos compilados
    "rootDir": "./src",                       // Directorio raíz de tu código fuente
    "strict": true,                           // Habilita todas las comprobaciones estrictas
    "esModuleInterop": true,                  // Permite la interoperabilidad entre CommonJS y ES Modules
    "forceConsistentCasingInFileNames": true, // Asegura que los nombres de archivos sean consistentes
    "skipLibCheck": true,                     // Omitir la comprobación de archivos de definición de tipo
    "noImplicitAny": false                    // Permitir variables con tipo implícito 'any'
  },
  "include": ["src/**/*.ts"],                 // Incluye todos los archivos TypeScript en la carpeta src
  "exclude": ["node_modules"]                 // Excluye la carpeta node_modules
}


